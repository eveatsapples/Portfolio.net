
@{
    ViewBag.Title = "JQuery";
}

@section scripts {
    @*<script type="text/javascript" src="~/Scripts/jqueryexercises.js"></script>*@
    @Scripts.Render("~/bundles/jqueryexercise")
}
<h2>JQuery</h2>

<form class="doSomeMath">
    <div class="form-group">
        <label for="formGroupExampleInput">Enter 5 Positive Numbers</label>
        <input type="number" pattern="[0-9]" min="1" step="any" class="form-control" id="doSomeMathInput1" placeholder="first number">
        <input type="number" pattern="[0-9]" min="1" step="any" class="form-control" id="doSomeMathInput2" placeholder="second number">
        <input type="number" pattern="[0-9]" min="1" step="any" class="form-control" id="doSomeMathInput3" placeholder="third number">
        <input type="number" pattern="[0-9]" min="1" step="any" class="form-control" id="doSomeMathInput4" placeholder="fourth number">
        <input type="number" pattern="[0-9]" min="1" step="any" class="form-control" id="doSomeMathInput5" placeholder="fifth number">
    </div>
    <button type="submit" class="btn btn-default">do Some Math!</button>
</form>
<div id="lowestNumber"></div>
<div id="highestNumber"></div>
<div id="mean"></div>
<div id="sum"></div>
<div id="product"></div>

<form class="findFactorial">
    <div class="form-group">
        <label for="formGroupExampleInput">Enter 1 Positive Number</label>
        <input type="number" pattern="[0-9]" min="1" class="form-control" id="findFactorialInput" placeholder="some number">
    </div>
    <button type="submit" class="btn btn-default">Find Factorial!</button>
</form>
<div id="factorialResult"></div>

<form class="fizzbuzz">
    <div class="form-group">
        <label for="formGroupExampleInput">Enter 2 Numbers Between 1 - 100</label>
        <input type="number" pattern="[0-9]" min="1" max="100" class="form-control" id="fizzbuzzInput1" placeholder="number between 1-100">
        <input type="number" pattern="[0-9]" min="1" max="100" class="form-control" id="fizzbuzzInput2" placeholder="number between 1-100">
    </div>
    <button type="submit" class="btn btn-default">Calculate!</button>
</form>
<ul id="fizzbuzzResults"></ul>

<form class="palindrome">
    <div class="form-group">
        <label for="formGroupExampleInput">Determine If The Word Is A Palindrome</label>
        <input type="text" class="form-control" id="palindromeInput" placeholder="enter a word">
    </div>
    <button type="submit" class="btn btn-default">Figure It Out!</button>
</form>
<div class="palindromeResult"></div>
